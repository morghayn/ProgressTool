<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="media/com_progresstool/rules"
>
    <fieldset
            name="details"
            label="Technology Decision Plan"
    >
        <field name="1"
               type="radio"
               default="1"
               label="Are sunny days common in your area?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
            <option value="2">The weather varies a lot</option>
        </field>
        <field name="2"
               type="radio"
               default="1"
               label="In your area there are a lot of farmers?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
        <field name="3"
               type="radio"
               default="1"
               label="In your area there is constant or almost constant wind?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
            <option value="2">Depends on the day</option>
        </field>
        <field name="4"
               type="radio"
               default="1"
               label="Do you have a field without trees in it?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
        <field name="5"
               type="radio"
               default="1"
               label="In your area there are demolish or unused wood?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
        <field name="6"
               type="radio"
               default="1"
               label="Do you have a river available?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
        <field name="7"
               type="radio"
               default="1"
               label="Are there any factories in your area that works with wood?"
               description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </field>
    </fieldset>
</form>
<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="media/com_progresstool/rules"
>
    <fieldset
            name="imageadd"
            label="Add Project Image"
    >
        <field
                name="id"
                type="hidden"
        />
        <fields name="imageinfo" label="image info label">
            <field
                    name="image"
                    type="media"
                    preview="false"
                    label="image"
                    directory="com_progresstool/survey"
            >
            </field>
            <field
                    name="top"
                    type="range"
                    label="top"
                    class="inputbox"
                    min="0"
                    max="300"
            >
            </field>
            <field
                    name="right"
                    type="range"
                    label="right"
                    class="inputbox"
                    min="0"
                    max="300"
            >
            </field>
        </fields>
    </fieldset>
</form>